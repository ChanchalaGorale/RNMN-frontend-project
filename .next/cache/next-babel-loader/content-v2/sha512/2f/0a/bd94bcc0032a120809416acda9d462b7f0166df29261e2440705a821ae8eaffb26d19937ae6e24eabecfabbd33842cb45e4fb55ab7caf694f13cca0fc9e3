ainer\",\n            children: /*#__PURE__*/_jsx(\"section\", {\n              children: /*#__PURE__*/_jsx(\"div\", {\n                className: \"col-md-12 lead\",\n                children: renderHTML(blog.body)\n              })\n            })\n          }), /*#__PURE__*/_jsxs(\"div\", {\n            className: \"container\",\n            children: [/*#__PURE__*/_jsx(\"h4\", {\n              className: \"text-center pt-5 pb-5 h2\",\n              children: \"Related blogs\"\n            }), /*#__PURE__*/_jsx(\"div\", {\n              className: \"row\",\n              children: showRelatedBlog()\n            })]\n          }), /*#__PURE__*/_jsx(\"div\", {\n            className: \"container pt-5 pb-5\",\n            children: showComments()\n          })]\n        })\n      })\n    })\n  });\n};\n\nSingleBlog.getInitialProps = ({\n  query\n}) => {\n  return singleBlog(query.slug).then(data => {\n    if (data.error) {\n      console.log(data.error);\n    } else {\n      // console.log('GET INITIAL PROPS IN SINGLE BLOG', data);\n      return {\n        blog: data,\n        query\n      };\n    }\n  });\n};\n\nexport default SingleBlog;","map":null,"metadata":{},"sourceType":"module"}